<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RPMailUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:RPMailUI.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="RPMailUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="RP-Mail UI">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <DockPanel>
        <controls:ErrorView DockPanel.Dock="Top" x:Name="ErrorView"
                            Errors="{Binding Errors}" HorizontalAlignment="Stretch" MaxHeight="55"/>
        <ProgressBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Margin="5"/>
        <Panel DockPanel.Dock="Bottom">
            <Button ZIndex="1"
                    Content="Start!" Command="{Binding StartCommand}"
                    FontSize="20" FontWeight="SemiBold" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,20,0"/>
            <TabControl MaxHeight="300">
                <TabItem Header="Task List" FontSize="20" FontWeight="SemiBold">
                    <controls:TaskListView Tasks="{Binding Tasks}"/>
                </TabItem>
                <TabItem Header="Console" FontSize="20" FontWeight="SemiBold">
                    <TextBox IsReadOnly="True" Text="{Binding ConsoleLog}"/>
                </TabItem>
                <TabItem Header="Hide" FontSize="20" FontWeight="SemiBold"/>
            </TabControl>
        </Panel>
        <ScrollViewer Margin="5" AllowAutoHide="True">
            <StackPanel Orientation="Vertical" Spacing="5">
                <Expander Header="Content Settings" HorizontalAlignment="Stretch" IsExpanded="True">
                    <StackPanel Orientation="Vertical" Spacing="5">
                        <controls:FileBarView Caption="CSV File" FileType="CSV" FilePath="{Binding CsvFile}"/>
                        <controls:TextBarView Caption="HTML File" Text="{Binding HtmlFile}"/>
                        <controls:TextBarView Caption="Subject:" Text="{Binding Subject}"/>
                        <controls:TextBarView Caption="Receiver Header:" Text="{Binding ReceiverHeader}"/>
                        <controls:TextPromptBarView Caption="CharSet:" PromptsSource="{StaticResource AllCharSets}" Text="{Binding CharSet}"/>
                        <controls:AttachmentView Margin="0,5,0,5" x:Name="AttachmentView" IsDirty="{Binding IsDirtySetter}"
                                                 Attachments="{Binding Attachments}"/>
                    </StackPanel>
                </Expander>
                <Expander Header="Sender Settings" HorizontalAlignment="Stretch">
                    <StackPanel Spacing="5">
                        <controls:TextBarView Caption="Sender Email:" Text="{Binding SenderEmail}"/>
                        <controls:TextBarView Caption="Password:" Text="{Binding SenderPassword}"/>
                        <controls:TextBarView Caption="SMTP Host:" Text="{Binding SmtpHost}"/>
                    </StackPanel>
                </Expander>
                <Expander Header="Convert Settings" HorizontalAlignment="Stretch">
                    <StackPanel>
                        <controls:FileBarView Caption="Output Folder:" IsDirectory="True" FilePath="{Binding OutputFolder}"/>
                        <CheckBox Content="Delete After Sent" IsChecked="{Binding IsDeleteAfterSent}"/>
                        <CheckBox Content="Convert Only" IsChecked="{Binding IsConvertOnly}"/>
                        <CheckBox Content="Save Raw Doc" IsChecked="{Binding IsSaveRawDoc}"/>
                        <CheckBox Content="Save HTML" IsChecked="{Binding IsSaveHtml}"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
