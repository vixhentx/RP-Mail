<UserControl xmlns="https://github.com/avaloniaui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:RPMailUI.Controls"
                      xmlns:models="clr-namespace:RPMailUI.Models"
                      mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                      x:Class="RPMailUI.Controls.AttachmentView"
                      x:Name="Root">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button Content="Append" Command="{Binding #Root.AppendAttachmentCommand}"/>
                <Button Content="Remove" Command="{Binding #Root.RemoveAttachmentCommand}"/>
            </StackPanel>
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Attachments" Margin="5"/>
        </DockPanel>
        <ListBox x:Name="AttachmentListBox" ItemsSource="{Binding #Root.Attachments}" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:AttachmentItemData">
                    <Grid ColumnDefinitions="*,Auto,*">
                        <local:FileBarView Grid.Column="0" Caption=""
                                     FilePath="{Binding SourceText, Mode=TwoWay}"/>
                        <Label Grid.Column="1"
                                Content=" ==> " VerticalAlignment="Center"/>
                        <TextBox Grid.Column="2" Margin="5"
                                 Text="{Binding DestinationText, Mode=TwoWay}" AcceptsReturn="False" AcceptsTab="False"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
